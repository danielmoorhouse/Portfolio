@model danielmoorhouse.Models.Blog.AddBlogPostModel


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>

<h4>BlogPost</h4>
<hr />
<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    
            <div class="form-group">
                <label>Category</label>&nbsp;<select asp-for="CategoryId" asp-items="@Model.CatList">
                             <option>-Select-</option>
                        </select>
            </div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
        
            <div class="form-group">
                <label asp-for="P1BlogContent" class="control-label"></label>
                <input asp-for="P1BlogContent" class="form-control" />
                <span asp-validation-for="P1BlogContent" class="text-danger"></span>
            </div>
               <div class="form-group">
                <label asp-for="P2BlogContent" class="control-label"></label>
                <input asp-for="P2BlogContent" class="form-control" />
                <span asp-validation-for="P2BlogContent" class="text-danger"></span>
            </div>
               <div class="form-group">
                <label asp-for="P3BlogContent" class="control-label"></label>
                <input asp-for="P3BlogContent" class="form-control" />
                <span asp-validation-for="P3BlogContent" class="text-danger"></span>
            </div>
     
            <div id="upload">
                    <label>Upload Image 1</label>
                    <br />
                    <label class="btn btn-default btn-file">
                        Browse <input type="file" asp-for="Image1" style="display: none">
                    </label>
                    <br/>
                        <label>Upload Image 2</label>
                    <br />
                    <label class="btn btn-default btn-file">
                        Browse <input type="file" asp-for="Image2" style="display: none">
                    </label>
                    <br/>
                        <label>Upload Image 3</label>
                    <br />
                    <label class="btn btn-default btn-file">
                        Browse <input type="file" asp-for="Image3" style="display: none">
                    </label>
                </div>
           
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

</body>
</html>
