@charset "utf-8"

* {
  margin: 0;
  padding: 0;
}
html, body {
  width: 100%;
height: 100%;


}
body {
  background-color: black;
}
nav {
  background-color: transparent;
}
.body-content {
  width: 100%;
  height: 100%;
  min-width: 100%;
  min-height: 100%;
  position: relative;



}
.body-content::before {
  background-image: url('/danielmoorhouse/images/mountiansky.jpg');
  background-size: cover;
  content: "";
  display: block;
  position: absolute;
  top: 0;
  left: 0;
  opacity: 0.6;
  width: 100%;
  height: 100%;
  z-index: -2;
}
.body-content::after {
  background-color: #5d0077;
  content: "";
  display: block;
  position: absolute;
  top: 0px;
  left: 0px;
  width: 100%;
  height: 100%;
  z-index: -1;
  opacity: 0.5;
}
